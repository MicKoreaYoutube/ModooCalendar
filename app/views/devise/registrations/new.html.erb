<title>M캘린더 - 회원가입</title>
<body class="content">
	<div class="center font">
		<br><br><br><br>
	<h2>회원 가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <label for="user_email">이메일</label><br>
	<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="이메일 입력" aria-label="Username" aria-describedby="basic-addon1" autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" required>
</div>
</div>

  <div class="field">
    <label for="user_password">비밀번호</label>
    <% if @minimum_password_length %>
    <em>(최소 <%= @minimum_password_length %> 글자)</em>
    <% end %><br />
	  <div class="input-group mb-3">
  <input type="password" class="form-control" placeholder="비밀번호 입력" aria-label="Username" aria-describedby="basic-addon1" autofocus="autofocus" autocomplete="new-password" type="password" name="user[password]" id="user_password" required>
</div>
  </div>

<div class="field">
    <label for="user_password_confirmation">비밀번호 확인</label><br>
		<div class="input-group mb-3">
  <input type="password" class="form-control" placeholder="비밀번호 확인" aria-label="Username" aria-describedby="basic-addon1" autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" required>
</div>
	<div class="field">
      <input name="user[remember_me]" type="hidden" value="0"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" class="form-check-input mt-0">
      <label for="user_remember_me">기억하기</label>
    </div>
</div>

<input type="submit" name="commit" value="가입" data-disable-with="Sign up" class="btn btn-outline-success">
<% end %>

<hr>
<input type="button" value="로그인" data-disable-with="Sign up" class="btn btn-outline-success" onclick="location.href = '/users/sign_in'">
</div>
	<br><br><br><br>
</body>
